<style>
    .btn-submit {
        margin-top: 120px;
    }
    body {
        font-family: sans-serif;
    }

    .settings__container {
        padding-top: 60px;
        max-width: 1000px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .setting__profile {
        display: flex;
        align-items: center;
    }

    .user__name {
        font-size: 18px;
        font-weight: 700;
    }

    .user__account-type {
        color: #99999f;
        font-size: 16;
        font-weight: 400;
        margin-top: 5px;
    }

    .avatar {
        position: relative;
        margin-right: 20px;
        background-color: #313131;
        border-radius: 50%;
        width: 85px;
        height: 85px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .avatar input {
        position: absolute;
        z-index: 11;
    }

    .avatar__plus {
        position: absolute;
        right: 0;
        top: 0;
    }

    .settings__premium {
        padding: 12px 36px;
        color: #fff;
        border-radius: 40px;
        background: -webkit-gradient(linear,
                right top,
                left top,
                from(#9b2def),
                color-stop(#2d9bef),
                to(#35edfb));
        background: -webkit-linear-gradient(right, #9b2def, #2d9bef, #35edfb);
        background: -o-linear-gradient(right, #9b2def, #2d9bef, #35edfb);
        background: linear-gradient(to left, #9b2def, #2d9bef, #35edfb);
    }
</style>